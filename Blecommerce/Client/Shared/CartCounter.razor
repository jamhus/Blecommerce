@inject ICartService CartService
@inject ISyncLocalStorageService LocalStorage
@implements IDisposable

<MudBadge Content="@GetCurrentItemsCount()" Overlap="true" Color="Color.Secondary" Origin="Origin.CenterRight">
            <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Secondary" />
        </MudBadge>
@code {
    private int GetCurrentItemsCount()
    {
        var cart = LocalStorage.GetItem<List<CartItem>>("cart");
        return cart != null ? cart.Count : 0;
    }

    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
}
