@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h2">Counter</MudText>

<MudText Typo="Typo.h5" role="status">Current count: @currentCount</MudText>

<MudButton Variant="Variant.Filled" OnClick="IncrementCount" Color="Color.Primary">Click</MudButton>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
